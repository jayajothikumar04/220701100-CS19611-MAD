<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.expensetracker">
    <application
        android:allowBackup="true"
        android:label="Expense Tracker"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseTracker">

        <activity
            android:name=".MainActivity"
            android:exported="true">   <!-- ðŸ‘ˆ Required attribute -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>